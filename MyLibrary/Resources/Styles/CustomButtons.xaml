    <!--  ToggleButton Style  -->
    <Style
        x:Key="CustomToggle"
        BasedOn="{StaticResource MaterialDesignActionToggleButton}"
        TargetType="ToggleButton">
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon
                    Width="auto"
                    Height="auto"
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                    Kind="{Binding Tag, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="10"
                    Opacity="1"
                    ShadowDepth="1"
                    Color="#FF000000" />
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>