<Window
    x:Class="MyLibrary.Views.Pages.Books.EditBook.EditBookView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyLibrary.Views.Pages.Books.EditBook"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:MyLibrary.Resources.Languages"
    xmlns:viewmodels="clr-namespace:MyLibrary.ViewModels"
    Title="{Binding Book.Title}"
    d:DataContext="{d:DesignInstance Type=viewmodels:EditBookViewModel}"
    AllowsTransparency="True"
    Background="#70000000"
    FontFamily="Jura Bold"
    ResizeMode="NoResize"
    Style="{DynamicResource MaterialDesignWindow}"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Border
            Height="auto"
            MinWidth="600"
            Padding="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
            ClipToBounds="True"
            CornerRadius="30">
            <Border
                Padding="0"
                Background="{DynamicResource MaterialDesignPaper}"
                CornerRadius="30">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Width="50"
                            Height="50"
                            Margin="20"
                            Padding="0"
                            HorizontalAlignment="Left"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="Back"
                            Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                            Style="{StaticResource CustomButton}"
                            Tag="ArrowULeftTopBold" />
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <ToggleButton
                                x:Name="ToggleEditorMode"
                                Width="50"
                                Height="50"
                                Margin="5"
                                Background="#30999999"
                                Focusable="False"
                                Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                                IsChecked="{Binding EditorMode, Mode=TwoWay}"
                                Style="{StaticResource CustomToggle}"
                                Tag="BookLockOutline"
                                ToolTip="MaterialDesignActionLightToggleButton">
                                <materialDesign:ToggleButtonAssist.OnContent>
                                    <materialDesign:PackIcon
                                        Width="auto"
                                        Height="auto"
                                        Margin="10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
                                        Kind="BookLockOpenOutline" />
                                </materialDesign:ToggleButtonAssist.OnContent>
                            </ToggleButton>
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Style="{StaticResource ShadowEffect}"
                                Text="{x:Static resx:Strings.Toggles_EditorMode}" />
                            <TextBlock
                                x:Name="EditorMode"
                                Margin="0,3,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="16">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource ShadowEffect}" TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding EditorMode}" Value="True">
                                                <Setter Property="Text" Value="{x:Static resx:Strings.ON}" />
                                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Primary}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding EditorMode}" Value="False">
                                                <Setter Property="Text" Value="{x:Static resx:Strings.OFF}" />
                                                <Setter Property="Foreground" Value="Gray" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                        <Button
                            Grid.Column="2"
                            Width="50"
                            Height="50"
                            Margin="20"
                            Padding="0"
                            HorizontalAlignment="Right"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="SaveChanges"
                            Focusable="False"
                            Foreground="YellowGreen"
                            Tag="CheckBold">
                            <Button.Style>
                                <Style BasedOn="{StaticResource CustomButton}" TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding EditorMode}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Setter Property="IsEnabled" Value="True" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding EditorMode}" Value="False">
                                            <Setter Property="Visibility" Value="Hidden" />
                                            <Setter Property="IsEnabled" Value="False" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    <Grid
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Border
                            Grid.Row="0"
                            Width="180"
                            Height="230"
                            Background="{DynamicResource MaterialDesign.Brush.Secondary.Dark}"
                            CornerRadius="20">
                            <Border
                                x:Name="BookImage"
                                Margin="5"
                                ClipToBounds="True"
                                CornerRadius="15">
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding Book.Picture}" Stretch="Fill" />
                                </Border.Background>
                            </Border>
                        </Border>
                        <TextBox
                            x:Name="ISBN"
                            Grid.Row="1"
                            Height="50"
                            MinWidth="300"
                            Margin="10"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="{x:Static resx:Strings.Book_Details_ISBN}"
                            Focusable="True"
                            IsEnabled="{Binding EditorMode}"
                            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Book.ISBN}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                        <TextBox
                            x:Name="Title"
                            Grid.Row="2"
                            Height="50"
                            MinWidth="300"
                            Margin="10"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="{x:Static resx:Strings.Book_Details_Title}"
                            Focusable="True"
                            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Book.Title}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                        <TextBox
                            x:Name="Author"
                            Grid.Row="3"
                            Height="50"
                            MinWidth="300"
                            Margin="10"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="{x:Static resx:Strings.Book_Details_Author}"
                            Focusable="True"
                            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Book.Author}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                        <TextBox
                            x:Name="Publisher"
                            Grid.Row="4"
                            Height="50"
                            MinWidth="300"
                            Margin="10"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="{x:Static resx:Strings.Book_Details_Publisher}"
                            Focusable="True"
                            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Book.Publisher}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                        <TextBox
                            x:Name="Genre"
                            Grid.Row="5"
                            Height="50"
                            MinWidth="300"
                            Margin="10"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="{x:Static resx:Strings.Book_Details_Genre}"
                            Focusable="True"
                            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Book.Genre}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                        <TextBox
                            x:Name="Pages"
                            Grid.Row="6"
                            Height="50"
                            MinWidth="300"
                            Margin="10"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="{x:Static resx:Strings.Book_Details_Pages}"
                            Focusable="True"
                            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Book.Pages}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                        <TextBox
                            x:Name="Description"
                            Grid.Row="7"
                            MinWidth="300"
                            MinHeight="50"
                            Margin="10"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="{x:Static resx:Strings.Book_Details_Description}"
                            AcceptsReturn="true"
                            Focusable="True"
                            Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding Book.Description}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                        <materialDesign:NumericUpDown
                            x:Name="Price"
                            Grid.Row="8"
                            Width="150"
                            Height="50"
                            Margin="10"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            materialDesign:HintAssist.Hint="{x:Static resx:Strings.Book_Details_PriceEUR}"
                            materialDesign:TextFieldAssist.SuffixText="€"
                            Maximum="9999"
                            Minimum="0"
                            Style="{StaticResource MaterialDesignOutlinedNumericUpDown}"
                            Value="{Binding Book.BasePrice}" />
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
