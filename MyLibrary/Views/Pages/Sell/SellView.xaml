<UserControl
    x:Class="MyLibrary.Views.Pages.Sell.SellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyLibrary.Views.Pages.Sell"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:MyLibrary.Resources.Languages"
    xmlns:viewmodels="clr-namespace:MyLibrary.ViewModels"
    MaxWidth="1200"
    MaxHeight="800"
    d:DataContext="{d:DesignInstance Type=viewmodels:SellViewModel}"
    FontFamily="Jura Bold"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SellView.Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border x:Name="MainBorder" Style="{StaticResource SellViewWindow}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid
                x:Name="Left"
                Grid.Column="0"
                VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Border
                    Width="180"
                    Height="230"
                    Background="{DynamicResource MaterialDesign.Brush.Secondary.Dark}"
                    CornerRadius="20">

                    <Border
                        x:Name="ItemImage"
                        Grid.Row="0"
                        Margin="5"
                        ClipToBounds="True"
                        CornerRadius="15">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding SelectedBookFromReceipt.Picture}" Stretch="Fill" />
                        </Border.Background>
                    </Border>
                </Border>
                <Grid
                    x:Name="ItemData"
                    Grid.Row="1"
                    Width="auto"
                    Height="auto"
                    Margin="10"
                    HorizontalAlignment="Center"
                    DataContext="{Binding SelectedBookFromReceipt}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        x:Name="ItemIDLabel"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                        Text="{x:Static resx:Strings.Book_Details_ID}"
                        TextAlignment="Right" />
                    <TextBlock
                        x:Name="ItemID"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5,5,0,0"
                        FontSize="16"
                        Text="{Binding Id}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        x:Name="ItemISBNLabel"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                        Text="{x:Static resx:Strings.Book_Details_ISBN}"
                        TextAlignment="Right" />
                    <TextBlock
                        x:Name="ItemISBN"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5,5,0,0"
                        FontSize="16"
                        Text="{Binding ISBN}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        x:Name="ItemTitleLabel"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                        Text="{x:Static resx:Strings.Book_Details_Title}"
                        TextAlignment="Right" />
                    <TextBlock
                        x:Name="ItemTitle"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5,5,0,0"
                        FontSize="16"
                        Text="{Binding Title}" />
                    <TextBlock
                        x:Name="ItemGenreLabel"
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                        Text="{x:Static resx:Strings.Book_Details_Genre}"
                        TextAlignment="Right" />
                    <TextBlock
                        x:Name="ItemGenre"
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5,5,0,0"
                        FontSize="16"
                        Text="{Binding Genre}" />
                    <TextBlock
                        x:Name="ItemAuthorLabel"
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                        Text="{x:Static resx:Strings.Book_Details_Author}"
                        TextAlignment="Right" />
                    <TextBlock
                        x:Name="ItemAuthor"
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5,5,0,0"
                        FontSize="16"
                        Text="{Binding Author}" />
                    <TextBlock
                        x:Name="ItemPublisherLabel"
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                        Text="{x:Static resx:Strings.Book_Details_Publisher}"
                        TextAlignment="Right" />
                    <TextBlock
                        x:Name="ItemPublisher"
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="5,5,0,0"
                        FontSize="16"
                        Text="{Binding Publisher}" />
                    <TextBlock
                        x:Name="ItemDescriptionLabel"
                        Grid.Row="6"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,20,0,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesign.Brush.Secondary}"
                        Text="{x:Static resx:Strings.Book_Details_Description}"
                        TextAlignment="Center" />
                    <TextBlock
                        x:Name="ItemDescription"
                        Grid.Row="7"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="10,5,10,5"
                        FontSize="16"
                        Text="{Binding Description}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </Grid>
            </Grid>
            <Border
                x:Name="Separator"
                Grid.Column="1"
                Width="1"
                Margin="5">
                <Border.Background>
                    <SolidColorBrush Color="#222222" />
                </Border.Background>
            </Border>
            <Grid
                x:Name="Right"
                Grid.Column="3"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <DataGrid
                    x:Name="ReceiptGrid"
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="auto"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="False"
                    CanUserSortColumns="False"
                    FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Mode=Self}}"
                    Focusable="True"
                    FontSize="16"
                    GridLinesVisibility="Horizontal"
                    HeadersVisibility="All"
                    IsReadOnly="True"
                    ItemsSource="{Binding DisplayOrders}"
                    KeyboardNavigation.DirectionalNavigation="Continue"
                    PreviewKeyDown="ReceiptGrid_PreviewKeyDown"
                    SelectionChanged="ReceiptGrid_SelectionChanged"
                    SelectionMode="Single"
                    SelectionUnit="FullRow">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                            <Setter Property="Focusable" Value="False" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridRow}" TargetType="DataGridRow">
                            <Setter Property="Focusable" Value="True" />
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn
                            Header="{x:Static resx:Strings.Recipe_Header_ISBN}"
                            HeaderStyle="{StaticResource HeaderCenter}"
                            IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{Binding ItemISBN}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Header="{x:Static resx:Strings.Recipe_Header_Name}"
                            HeaderStyle="{StaticResource HeaderCenter}"
                            IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{Binding ItemName}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Header="{x:Static resx:Strings.Recipe_Header_Price}"
                            HeaderStyle="{StaticResource HeaderRight}"
                            IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{Binding Price, StringFormat=C2}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Header="{x:Static resx:Strings.Recipe_Header_Quantity}"
                            HeaderStyle="{StaticResource HeaderCenter}"
                            IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{Binding Quantity}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn
                            Header="{x:Static resx:Strings.Recipe_Header_Total}"
                            HeaderStyle="{StaticResource HeaderRight}"
                            IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{Binding Total, StringFormat=C2}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn IsReadOnly="True">

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        x:Name="Delete"
                                        Height="40"
                                        Margin="20,0,0,0"
                                        HorizontalAlignment="Right"
                                        Command="{Binding DataContext.DeleteItemFromReceiptCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding ItemId}"
                                        Style="{StaticResource DeleteButton}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="50"
                    Height="50"
                    Margin="0,20,0,0"
                    Padding="0"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Click="OpenNewItemDialog"
                    Content="+"
                    FontSize="30"
                    Style="{DynamicResource LogInButton}" />
                <TextBlock
                    x:Name="ReceiptValidator"
                    Grid.Row="2"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Foreground="Red"
                    Text="{Binding ReceiptErrors}"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    Visibility="{Binding ErrorsVisibility}" />
                <Border
                    Grid.Row="3"
                    Grid.Column="0"
                    Width="auto"
                    Margin="0,20,0,0"
                    VerticalAlignment="Bottom"
                    BorderBrush="#50000000"
                    BorderThickness="1"
                    Visibility="{Binding FinishVisibility}" />
                <Button
                    x:Name="FinishReceipt"
                    Grid.Row="4"
                    Grid.Column="0"
                    Width="200"
                    Height="70"
                    Margin="0,20"
                    Padding="0"
                    VerticalAlignment="Bottom"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Command="{Binding SellCommand}"
                    Content="Finish"
                    FontSize="30"
                    Style="{DynamicResource LogInButton}"
                    Visibility="{Binding FinishVisibility}" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
