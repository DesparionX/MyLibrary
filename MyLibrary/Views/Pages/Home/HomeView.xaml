<UserControl
    x:Class="MyLibrary.Views.Pages.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyLibrary.Views.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:MyLibrary.Resources.Languages"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    FontFamily="Jura Bold"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Home.Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,50,0">
            <Button
                Width="300"
                Height="300"
                HorizontalAlignment="Center"
                Command="{Binding NavigateToViewCommand}"
                CommandParameter="Borrow"
                Style="{DynamicResource LargeNavButton}">
                <Button.Content>
                    <TextBlock
                        FontSize="50"
                        Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                        Text="{x:Static resx:Strings.Home_BorrowBooks}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </Button.Content>
            </Button>
            <materialDesign:PackIcon
                Width="80"
                Height="80"
                Margin="0,-30,0,0"
                HorizontalAlignment="Center"
                Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                Kind="BookPlusMultiple"
                Style="{DynamicResource ShadowEffect}" />
        </Grid>
        <Grid
            Grid.Row="0"
            Grid.Column="1"
            Margin="50,0,50,0">
            <Button
                Width="300"
                Height="300"
                HorizontalAlignment="Center"
                Command="{Binding NavigateToViewCommand}"
                CommandParameter="Sell"
                Style="{DynamicResource LargeNavButton}">
                <Button.Content>
                    <TextBlock
                        FontSize="50"
                        Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                        Text="{x:Static resx:Strings.Home_Sell}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </Button.Content>
            </Button>
            <materialDesign:PackIcon
                Width="80"
                Height="80"
                Margin="0,-30,0,0"
                HorizontalAlignment="Center"
                Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                Kind="ReceiptTextPlus"
                Style="{DynamicResource ShadowEffect}" />
        </Grid>
        <Grid
            Grid.Row="0"
            Grid.Column="2"
            Margin="50,0,0,0">
            <Button
                Width="300"
                Height="300"
                HorizontalAlignment="Center"
                Command="{Binding NavigateToViewCommand}"
                CommandParameter="Return"
                Style="{DynamicResource LargeNavButton}">
                <Button.Content>
                    <TextBlock
                        FontSize="50"
                        Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                        Text="{x:Static resx:Strings.Home_ReturnBooks}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </Button.Content>
            </Button>
            <materialDesign:PackIcon
                Width="80"
                Height="80"
                Margin="0,-30,0,0"
                HorizontalAlignment="Center"
                Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                Kind="BookSync"
                Style="{DynamicResource ShadowEffect}" />
        </Grid>
    </Grid>

</UserControl>
