<Window
    x:Class="MyLibrary.Views.StartingLanguage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyLibrary.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="681.5"
    Height="400"
    Margin="0"
    Padding="0"
    AllowsTransparency="True"
    Background="Black"
    Style="{DynamicResource MaterialDesignWindow}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid SnapsToDevicePixels="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            x:Name="English"
            Width="500.480778013854"
            Height="400"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="English_Click"
            InkCanvas.Right="0"
            InkCanvas.Top="0"
            OpacityMask="Black"
            SnapsToDevicePixels="True"
            Style="{DynamicResource StartingLanguageEnglish}"
            ToolTip="English">
            <Button.Clip>
                <PathGeometry Figures="M335,0 L500.480778013854,0 L500.480778013854,400 L0,400 Z" />
            </Button.Clip>
        </Button>
        <Button
            x:Name="Bulgarian"
            Height="400"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Bulgarian_Click"
            InkCanvas.Left="0"
            InkCanvas.Top="0"
            OpacityMask="Black"
            SnapsToDevicePixels="True"
            Style="{DynamicResource StartingLanguageBulgarian}"
            ToolTip="Български">
            <Button.Clip>
                <PathGeometry Figures="M0,0 L525.5,0 L182,400 L0,400 Z" />
            </Button.Clip>

        </Button>
    </Grid>
</Window>
