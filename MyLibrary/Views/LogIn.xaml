<Window
    x:Class="MyLibrary.Views.LogIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyLibrary.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:MyLibrary.ViewModels"
    Title="LogInView"
    Width="400"
    Height="600"
    d:DataContext="{d:DesignInstance Type=viewmodels:LogInViewModel}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel Margin="0,10,0,0">
        <TextBox
            x:Name="Email"
            Width="200"
            Height="40"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontSize="16"
            TextAlignment="Center"
            TextChanged="Email_TextChanged"
            TextWrapping="Wrap" />
        <Label
            x:Name="EmailValidator"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            Content="{Binding EmailErrors}"
            Foreground="Red"
            Visibility="{Binding EmailErrorVisibility}" />
        <PasswordBox
            x:Name="Password"
            Width="200"
            Height="40"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            PasswordChanged="Password_PasswordChanged" />
        <Label
            x:Name="PasswordValidator"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            Content="{Binding PasswordErrors}"
            Foreground="Red"
            Visibility="{Binding PasswordErrorVisibility}" />
        <Button
            x:Name="LogInButton"
            Width="150"
            Height="40"
            Margin="0,50,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="LogInButton_Click"
            Content="Button" />

    </StackPanel>
</Window>
