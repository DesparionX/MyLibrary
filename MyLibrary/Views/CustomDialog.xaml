<Window
    x:Class="MyLibrary.Views.CustomDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyLibrary.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:MyLibrary.Resources.Languages"
    xmlns:viewmodels="clr-namespace:MyLibrary.ViewModels"
    Title="{Binding Title}"
    d:DataContext="{d:DesignInstance Type=viewmodels:CustomDialogViewModel}"
    AllowsTransparency="True"
    Background="#70000000"
    FontFamily="Jura Bold"
    ResizeMode="NoResize"
    Style="{DynamicResource MaterialDesignWindow}"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Border
            x:Name="DialogBorder"
            Width="400"
            Height="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="20">

            <Border
                Margin="5"
                Padding="0"
                HorizontalAlignment="Stretch"
                Background="{DynamicResource MaterialDesignPaper}"
                CornerRadius="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="20,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="WhiteSmoke"
                        Text="{Binding Message}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                    <StackPanel
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <Button
                            Grid.Row="1"
                            Grid.Column="0"
                            Width="100"
                            Height="50"
                            Margin="50,10"
                            Padding="0"
                            VerticalAlignment="Bottom"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Command="{Binding ConfirmCommand}"
                            Content="{Binding ConfirmButtonText}"
                            FontSize="20"
                            Style="{DynamicResource LogInButton}" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="0"
                            Width="100"
                            Height="50"
                            Margin="50,10"
                            Padding="0"
                            VerticalAlignment="Bottom"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Command="{Binding CancelCommand}"
                            Content="{Binding CancelButtonText}"
                            FontSize="20"
                            Style="{DynamicResource LogInButton}"
                            Visibility="{Binding ShowCancelButton}" />
                    </StackPanel>

                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
